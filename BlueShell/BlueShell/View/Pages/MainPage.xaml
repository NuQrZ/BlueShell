<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="BlueShell.View.Pages.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Loaded="MainPage_Loaded">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="8"/>
                <RowDefinition Height="48"/>
            </Grid.RowDefinitions>

            <StackPanel x:Name="ButtonStack"
                        Grid.Column="0"
                        Grid.Row="1"
                        Orientation="Horizontal"
                        Margin="0, -10, 0, 0">
                <Button x:Name="BtnGoBack"
                        Background="Transparent"
                        BorderThickness="0"
                        FontFamily="Cascadia Mono"
                        Height="35"
                        Margin="10, 0, 0, 0">
                    <ToolTipService.ToolTip>
                        <ToolTip Content="Go Back" Placement="Top"/>
                    </ToolTipService.ToolTip>
                    <Button.ContentTemplate>
                        <DataTemplate>
                            <FontIcon Glyph="&#xE72B;" FontSize="15"/>
                        </DataTemplate>
                    </Button.ContentTemplate>
                </Button>

                <Button x:Name="BtnGoForward"
                        Background="Transparent"
                        BorderThickness="0"
                        FontFamily="Cascadia Mono"
                        Height="35"
                        Margin="10, 0, 0, 0">
                    <ToolTipService.ToolTip>
                        <ToolTip Content="Go Back" Placement="Top"/>
                    </ToolTipService.ToolTip>
                    <Button.ContentTemplate>
                        <DataTemplate>
                            <FontIcon Glyph="&#xE72A;" FontSize="15"/>
                        </DataTemplate>
                    </Button.ContentTemplate>
                </Button>

                <Button x:Name="BtnRefresh"
                        Background="Transparent"
                        BorderThickness="0"
                        FontFamily="Cascadia Mono"
                        Height="35"
                        Margin="10, 0, 0, 0">
                    <ToolTipService.ToolTip>
                        <ToolTip Content="Go Back" Placement="Top"/>
                    </ToolTipService.ToolTip>
                    <Button.ContentTemplate>
                        <DataTemplate>
                            <FontIcon Glyph="&#xE72C;" FontSize="15"/>
                        </DataTemplate>
                    </Button.ContentTemplate>
                </Button>

                <Button x:Name="ToggleTerminalLayout"
                        Background="Transparent"
                        BorderThickness="0"
                        FontFamily="Cascadia Mono"
                        Height="35"
                        Margin="10, 0, 0, 0"
                        Click="ToggleTerminalLayout_OnClick">
                    <ToolTipService.ToolTip>
                        <ToolTip Content="Toggle terminal layout" Placement="Top"/>
                    </ToolTipService.ToolTip>
                    <Button.ContentTemplate>
                        <DataTemplate>
                            <!-- “two panes” style icon -->
                            <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE7F8;" FontSize="15"/>
                        </DataTemplate>
                    </Button.ContentTemplate>
                </Button>


                <Button x:Name="BtnMoreTools"
                        Background="Transparent"
                        BorderThickness="0"
                        FontFamily="Cascadia Mono"
                        Height="35"
                        Margin="10, 0, 0, 0">
                    <ToolTipService.ToolTip>
                        <ToolTip Content="Go Back" Placement="Top"/>
                    </ToolTipService.ToolTip>
                    <Button.ContentTemplate>
                        <DataTemplate>
                            <FontIcon Glyph="&#xE712;" FontSize="15"/>
                        </DataTemplate>
                    </Button.ContentTemplate>

                    <Button.Flyout>
                        <MenuFlyout x:Name="ButtonFlyout">
                            <MenuFlyout.SystemBackdrop>
                                <MicaBackdrop Kind="BaseAlt"/>
                            </MenuFlyout.SystemBackdrop>

                            <MenuFlyoutItem x:Name="SelectAll"   Text="Select All">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon Glyph="&#xE8B3;"/>
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>
                            <MenuFlyoutItem x:Name="SelectNone" Text="Select None">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon Glyph="&#xF0E2;"/>
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>
                            <MenuFlyoutItem x:Name="CreateFolders" Text="Create Folders">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon Glyph="&#xE8F4;"/>
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>
                            <MenuFlyoutItem x:Name="CreateFiles" Text="Create Files">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon Glyph="&#xECC8;"/>
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>
                            <MenuFlyoutItem x:Name="Delete" Text="Delete">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon Glyph="&#xE74D;"/>
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>
                            <MenuFlyoutItem x:Name="Rename" Text="Rename">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon Glyph="&#xE8AC;"/>
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>
                            <MenuFlyoutItem x:Name="Copy" Text="Copy">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon Glyph="&#xF413;"/>
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>
                            <MenuFlyoutItem x:Name="Move" Text="Move">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon Glyph="&#xE8DE;"/>
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>
                            <MenuFlyoutItem x:Name="InspectElement" Text="Inspect Element">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon Glyph="&#xE71E;"/>
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>
                        </MenuFlyout>
                    </Button.Flyout>
                </Button>
            </StackPanel>

            <Grid Grid.Column="1"
                  Grid.Row="1"
                  Margin="10, -10, 0, 0"
                  Background="{ThemeResource ControlFillColorSecondary}"
                  Height="35"
                  CornerRadius="4">
                <BreadcrumbBar x:Name="AddressBar" Margin="10, 2.5, 0, 0"/>
            </Grid>

            <AutoSuggestBox x:Name="SearchBox"
                            AutomationProperties.Name="Search"
                            BorderThickness="0"
                            FontFamily="Cascadia Mono"
                            FontSize="16"
                            Grid.Column="2"
                            Grid.Row="1"
                            Height="35"
                            Margin="10, -10, 10, 0"
                            MaxWidth="400"
                            MinWidth="400"
                            PlaceholderText="Search System..."
                            VerticalContentAlignment="Center"
                            QueryIcon="Find"/>
        </Grid>

        <NavigationView x:Name="NavigationViewControl"
                        Grid.Row="1"
                        IsBackButtonVisible="Collapsed"
                        IsSettingsVisible="False"
                        PaneDisplayMode="Auto"
                        SelectionChanged="NavigationViewControl_SelectionChanged">
            <NavigationView.MenuItems>
                <NavigationViewItem x:Name="TerminalItem"
                                    Content="Terminal"
                                    FontFamily="Cascadia Mono"
                                    FontSize="14"
                                    Tag="Terminal">
                    <NavigationViewItem.Icon>
                        <ImageIcon Source="/Assets/Terminal.ico"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>

                <NavigationViewItem x:Name="HelpItem"
                                    Content="Help"
                                    FontFamily="Cascadia Mono"
                                    FontSize="14"
                                    Tag="Help">
                    <NavigationViewItem.Icon>
                        <ImageIcon Source="/Assets/Help.ico"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>

                <NavigationViewItem x:Name="SystemProcessesItem"
                                    Content="System Processes"
                                    FontFamily="Cascadia Mono"
                                    FontSize="14"
                                    Tag="SystemProcesses">
                    <NavigationViewItem.Icon>
                        <ImageIcon Source="/Assets/Processes.ico"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>

                <NavigationViewItem x:Name="WebPageItem"
                                    Content="Web Search"
                                    FontFamily="Cascadia Mono"
                                    FontSize="14"
                                    Tag="WebPage">
                    <NavigationViewItem.Icon>
                        <ImageIcon Source="/Assets/Web.ico"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>

                <NavigationViewItem x:Name="SystemInfoItem"
                                    Content="System Info"
                                    FontFamily="Cascadia Mono"
                                    FontSize="14"
                                    Tag="SystemInfo">
                    <NavigationViewItem.Icon>
                        <ImageIcon Source="/Assets/System Info.ico"/>
                    </NavigationViewItem.Icon>

                    <NavigationViewItem.MenuItems>
                        <NavigationViewItem x:Name="GraphicsCardInfoItem"
                                            Content="Graphics Card"
                                            FontFamily="Cascadia Mono"
                                            FontSize="14"
                                            Tag="GraphicsCard">
                            <NavigationViewItem.Icon>
                                <ImageIcon Source="/Assets/Graphics Card.ico"/>
                            </NavigationViewItem.Icon>
                        </NavigationViewItem>

                        <NavigationViewItem x:Name="MotherboardInfoItem"
                                            Content="Motherboard"
                                            FontFamily="Cascadia Mono"
                                            FontSize="14"
                                            Tag="Motherboard">
                            <NavigationViewItem.Icon>
                                <ImageIcon Source="/Assets/Motherboard.ico"/>
                            </NavigationViewItem.Icon>
                        </NavigationViewItem>

                        <NavigationViewItem x:Name="NetworkInfoItem"
                                            Content="Network Interface"
                                            FontFamily="Cascadia Mono"
                                            FontSize="14"
                                            Tag="NetworkInterface">
                            <NavigationViewItem.Icon>
                                <ImageIcon Source="/Assets/Wifi.ico"/>
                            </NavigationViewItem.Icon>
                        </NavigationViewItem>

                        <NavigationViewItem x:Name="OperatingSystemInfoItem"
                                            Content="Operating System"
                                            FontFamily="Cascadia Mono"
                                            FontSize="14"
                                            Tag="OperatingSystem">
                            <NavigationViewItem.Icon>
                                <ImageIcon Source="/Assets/Windows 11.ico"/>
                            </NavigationViewItem.Icon>
                        </NavigationViewItem>

                        <NavigationViewItem x:Name="ProcessorInfoItem"
                                            Content="Processor"
                                            FontFamily="Cascadia Mono"
                                            FontSize="14"
                                            Tag="Processor">
                            <NavigationViewItem.Icon>
                                <ImageIcon Source="/Assets/CPU.ico"/>
                            </NavigationViewItem.Icon>
                        </NavigationViewItem>
                    </NavigationViewItem.MenuItems>
                </NavigationViewItem>
            </NavigationView.MenuItems>
            <Frame x:Name="MainFrame"/>
        </NavigationView>

    </Grid>
</Page>
