<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="BlueShell.View.Windows.PropertiesWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="using:BlueShell.Model.Properties"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="42"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid x:Name="AppTitleBar"
              Grid.Row="0"
              Height="50">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="56"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="260"/>
            </Grid.ColumnDefinitions>
        </Grid>
        <Grid Grid.Row="1">
            <NavigationView
        MenuItemsSource="{x:Bind _propertiesWindowViewModel.PropertyItems}"
        IsSettingsVisible="False"
        IsBackButtonVisible="Collapsed"
        PaneDisplayMode="Left"
        SelectionChanged="NavigationView_SelectionChanged"
        SelectedItem="{x:Bind _propertiesWindowViewModel.SelectedItem}">
                <NavigationView.MenuItemTemplate>
                    <DataTemplate x:DataType="model:PropertyItem">
                        <NavigationViewItem Content="{x:Bind ItemName}"
                                    FontFamily="Cascadia Code"
                                    FontSize="16">
                            <NavigationViewItem.Icon>
                                <ImageIcon Source="{x:Bind BitmapIcon}"/>
                            </NavigationViewItem.Icon>
                        </NavigationViewItem>
                    </DataTemplate>
                </NavigationView.MenuItemTemplate>

                <NavigationView.Content>
                    <ScrollViewer>
                        <ItemsControl ItemsSource="{x:Bind _propertiesWindowViewModel.SelectedItem.PropertyGroups, FallbackValue=null}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate x:DataType="model:PropertyGroup">
                                    <StackPanel Margin="0,0,0,24">
                                        <TextBlock Text="{x:Bind GroupName}"
                                           FontSize="18"
                                           FontFamily="Cascadia Code"
                                           FontWeight="SemiBold"
                                           Margin="0,0,0,12"/>

                                        <ItemsControl ItemsSource="{x:Bind PropertyRows}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate x:DataType="model:PropertyRow">
                                                    <Grid Margin="0,0,0,8">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="320"/>
                                                            <ColumnDefinition Width="*"/>
                                                        </Grid.ColumnDefinitions>

                                                        <TextBlock Grid.Column="0"
                                                           Text="{x:Bind Label}"
                                                           Opacity="0.75"
                                                           FontSize="18"
                                                           FontFamily="Cascadia Code"
                                                           VerticalAlignment="Top"/>

                                                        <TextBlock Grid.Column="1"
                                                           Text="{x:Bind Text}"
                                                           TextWrapping="Wrap"
                                                           FontSize="18"
                                                           FontFamily="Cascadia Code"
                                                           VerticalAlignment="Top"/>
                                                    </Grid>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </NavigationView.Content>
            </NavigationView>
        </Grid>
    </Grid>
</Window>
