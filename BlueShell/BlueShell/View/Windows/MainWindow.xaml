<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="BlueShell.View.Windows.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="using:BlueShell.Model"
    mc:Ignorable="d"
    Title="BlueShell">

    <Grid Background="Transparent">
        <Grid.RowDefinitions>
            <RowDefinition Height="42"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid x:Name="AppTitleBar"
              Grid.Row="0"
              Height="50">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="56"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="260"/>
            </Grid.ColumnDefinitions>
            <ToggleButton Name="SettingsButton" Grid.Column="0"
                          Command="{x:Bind _mainWindowViewModel.ToggleSettingsPageCommand}"
                          Background="Transparent"
                          BorderThickness="0"
                          FontFamily="Cascadia Mono"
                          Width="38"
                          Height="36"
                          Margin="10, 0, 0, 5">
                <ToggleButton.CommandParameter>
                    <Binding Path="IsChecked" ElementName="SettingsButton" />
                </ToggleButton.CommandParameter>
                <ToolTipService.ToolTip>
                    <ToolTip Content="Settings" Placement="Bottom"/>
                </ToolTipService.ToolTip>
                <ToggleButton.ContentTemplate>
                    <DataTemplate>
                        <FontIcon Glyph="&#xE713;" FontSize="15"/>
                    </DataTemplate>
                </ToggleButton.ContentTemplate>
            </ToggleButton>

            <TabView Name="TabView"
                     Grid.Column="1"
                     DataContext="{x:Bind _mainWindowViewModel}"
                     TabItemsSource="{x:Bind _mainWindowViewModel.Tabs}"
                     SelectedItem="{x:Bind _mainWindowViewModel.SelectedTab, Mode=TwoWay}"
                     AddTabButtonCommand="{x:Bind _mainWindowViewModel.AddTabCommand}"
                     HorizontalAlignment="Stretch"
                     VerticalAlignment="Stretch"
                     CanReorderTabs="True"
                     CanDrag="True"
                     Margin="0, -2, 0, 0">
                <TabView.Resources>
                    <Style TargetType="TabViewItem">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="TabViewItem">
                                    <Grid x:Name="RootGrid"
                                          CornerRadius="4, 4, 4, 0"
                                          Height="36">
                                        <VisualStateManager.VisualStateGroups>
                                            <VisualStateGroup x:Name="SelectionStates">
                                                <VisualState x:Name="Selected">
                                                    <Storyboard>
                                                        <ObjectAnimationUsingKeyFrames
                                                                        Storyboard.TargetProperty="Background"
                                                                        Storyboard.TargetName="RootGrid">
                                                            <DiscreteObjectKeyFrame KeyTime="0"
                                                                            Value="{ThemeResource LayerOnMicaBaseAltFillColorDefault}"/>
                                                        </ObjectAnimationUsingKeyFrames>
                                                    </Storyboard>
                                                </VisualState>
                                                <VisualState x:Name="Normal">
                                                    <Storyboard>
                                                        <ObjectAnimationUsingKeyFrames
                                                                        Storyboard.TargetProperty="Background"
                                                                        Storyboard.TargetName="RootGrid">
                                                            <DiscreteObjectKeyFrame KeyTime="0"
                                                                            Value="{ThemeResource ControlAltFillColorTransparent}"/>
                                                        </ObjectAnimationUsingKeyFrames>
                                                    </Storyboard>
                                                </VisualState>
                                                <VisualState x:Name="PointerOver">
                                                    <Storyboard>
                                                        <ObjectAnimationUsingKeyFrames
                                                                        Storyboard.TargetProperty="Background"
                                                                        Storyboard.TargetName="RootGrid">
                                                            <DiscreteObjectKeyFrame KeyTime="0"
                                                                            Value="{ThemeResource LayerOnMicaBaseAltFillColorSecondaryBrush}"/>
                                                        </ObjectAnimationUsingKeyFrames>
                                                    </Storyboard>
                                                </VisualState>
                                            </VisualStateGroup>
                                        </VisualStateManager.VisualStateGroups>

                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0"
                                                    Orientation="Horizontal"
                                                    Spacing="5"
                                                    HorizontalAlignment="Left"
                                                    VerticalAlignment="Center"
                                                    Width="Auto"
                                                    Margin="10,0,0,0">
                                            <IconSourceElement IconSource="{TemplateBinding IconSource}"
                                                               Width="24"
                                                               Height="24"/>
                                            <TextBlock Text="{TemplateBinding Header}"
                                                       FontFamily="Consolas"
                                                       FontSize="16"
                                                       Width="Auto"
                                                       FontWeight="SemiLight"
                                                       VerticalAlignment="Center"
                                                       Padding="8,0,0,0"/>
                                        </StackPanel>

                                        <Button Grid.Column="1"
                                                Content="&#xE894;"
                                                CornerRadius="6"
                                                Background="Transparent"
                                                FontFamily="Segoe Fluent Icons"
                                                FontSize="10"
                                                Width="25"
                                                Height="25"
                                                VerticalAlignment="Center"
                                                BorderThickness="0"
                                                Padding="0"
                                                Margin="0, 0, 5, 0"
                                                CommandParameter="{Binding}">
                                            <Button.Command>
                                                <Binding Path="DataContext.RemoveTabCommand" ElementName="TabView" />
                                            </Button.Command>
                                        </Button>
                                    </Grid>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </TabView.Resources>
                <TabView.TabItemTemplate>
                    <DataTemplate x:DataType="model:TabModel">
                        <TabViewItem>
                            <TabViewItem.IconSource>
                                <Binding Path="TabIcon" Mode="TwoWay" />
                            </TabViewItem.IconSource>
                            <TabViewItem.Header>
                                <Binding Path="TabHeader" Mode="TwoWay"/>
                            </TabViewItem.Header>
                            <TabViewItem.Transitions>
                                <EdgeUIThemeTransition Edge="Left"></EdgeUIThemeTransition>
                            </TabViewItem.Transitions>
                        </TabViewItem>
                    </DataTemplate>
                </TabView.TabItemTemplate>
            </TabView>
        </Grid>
        <Grid Grid.Row="1">
            <Frame Content="{x:Bind _mainWindowViewModel.SelectedTab.TabFrame, Mode=TwoWay}"
                   DataContext="{x:Bind _mainWindowViewModel.SelectedTab, Mode=TwoWay}"/>
        </Grid>
    </Grid>
</Window>
